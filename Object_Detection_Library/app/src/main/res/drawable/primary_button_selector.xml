<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Активное состояние -->
    <item android:drawable="@drawable/primary_button_active" android:state_enabled="true" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />

    <!-- Неактивное состояние -->
    <item android:drawable="@drawable/primary_button_inactive" android:state_enabled="true" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />

    <!-- При наведении -->
    <item android:drawable="@drawable/primary_button_focus" android:state_enabled="true" android:state_pressed="true" />

    <!-- Состояние в фокусе -->
    <item android:drawable="@drawable/primary_button_focus" android:state_enabled="true" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />

    <!-- Disabled state -->
    <item android:drawable="@drawable/primary_button_disabled" android:state_enabled="false" />
</selector>